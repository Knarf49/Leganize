{
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "DIRECT_URL",
        "DATABASE_URI",
        
        "AUTH_SECRET",
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "AUTH_FACEBOOK_ID",
        "AUTH_FACEBOOK_SECRET",

        "ANTHROPIC_API_KEY",
        "LANGSMITH_API_KEY",
        "LANGSMITH_TRACING_V2",
        "LANGSMITH_PROJECT"
      ]
    },
    "build:internal": {
      "dependsOn": ["^build:internal"]
    },
    "dev": {
      "dependsOn": ["^dev"]
    }
  }
}
